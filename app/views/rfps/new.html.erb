<div class="site-container">
  <div id="form-paper">
    <div ng-app="app">
      <div ng-controller="rfpsCtrl" ng-init="setup()">
        <div class="form-heading">

          <h1> 2016 SVP Chicago Request for Proposal </h1>
          <hr>

          <p><b>Completing this Form:</b></p>

          <p>Please enter information directly into the form, using this form as the main body of your Letter of Interest. The boxes will expand to hold your text. You can adjust the page breaks when you have completed the form.</p>

          <p><ul>
            <li>If you find an item confusing, please feel free to contact us.</li>

            <li>Please use bullet points rather than paragraphs. Brevity is helpful to our partners when reviewing proposals.</li>
          </ul></p>
        </div>
        
        <!-- DISPLAY ERRORS -->
        <div class="errors" ng-if="errors">
          <h5> These questions can not be left blank: </h5>
          <ul ng-repeat="error in errors">
            <li> {{error}} </li>
          </ul>
        </div>
         
        <!-- START FORM -->  
        <div class="form-body">
          <form name="rfpForm" ng-submit="submit(name, email, rfpForm.$valid)" novalidate>

            <div ng-repeat="section in sections">

              <!-- CONTACT INFORMATION SECTION -->
              <div class="rfp-section">
                <div ng-show="section.name =='Contact Information'">
                  <h1 class="rfp-section-heading">1. {{section.name}}</h1>
                  <div ng-repeat="question in section.questions">
                    <div class="form group">
                      <label>{{question.question}}</label>
                      <input class="form-control" ng-model="question.answer">
                    </div>
                  </div>
                </div>
              </div>

              <!-- ORGANIZATION SECTION -->
              <div class="rfp-section">
                <div ng-show="section.name =='Organization'">
                  <h1 class="rfp-section-heading">2. {{section.name}}</h1>
                  <div ng-repeat="question in section.questions">
                    <div class="form group">
                      <label>{{question.question}}</label>
                      <input class="form-control" ng-model="question.answer">
                    </div>
                  </div>
                </div>
              </div>  

              <!-- CURRENT PROGRAMS SECTION -->
              <div class="rfp-section">
                <div ng-show="section.name =='Current Programs or Services'">
                  <h1 class="rfp-section-heading">3. {{section.name}}</h1>


                  <!-- LIST ALL PROGRAMS WITH MULTIPLE ENTRY -->
                  <div>
                    <div class="form group list">
                      <label>{{section.questions[0].question}}</label>
                      <div ng-repeat="answer in section.questions[0].answers">
                        <input class="form-control" ng-model="answer.answer" placeholder="{{$index+1}}">
                      </div>
                    </div>
                    <p><a ng-click="addProgram()">Add Program</a></p>
                  </div>

                  <div ng-repeat="question in section.questions">
                    <div ng-if="$index!=0" class="form group">
                      <label>{{question.question}}</label>
                      <input class="form-control" ng-model="question.answer">
                    </div>
                  </div>
                </div>
              </div> 

            </div>

            <div class="submit-button-container">
              <button class="btn btn-primary btn-lg" type="submit">Submit</button>
            </div>  

          </form>
          <!-- END FORM -->

        </div>
      </div>

    </div>
  </div>