<h1> LOI SHOW </h1>
<p> Name: <%= @loi.name %> </p>
<p> Email: <%= @loi.email %> </p>
<% @loi.answers.each do |answer| %>
  <p> <%= answer.question.question %>: <%= answer.answer %> </p>
<% end %>

<% if user_signed_in? %>
  <%= link_to "Rate", "/ratings/new?loi=#{@loi.id}", :class => "btn btn-default", :role => "button" %>
<% end %>

<% if current_user && current_user.admin %>
  <%= link_to "Edit", "/lois/#{@loi.id}/edit/", :class => "btn btn-default", :role => "button" %>
  <%= link_to "Delete", "/lois/#{@loi.id}", method: :delete, data:{confirm: "Are You Sure"}, :class => "btn btn-default", :role => "button" %>
<% end %>
