<!-- Main Site Container -->
<div class="site-container">
  <!-- This is a class meant to look like a sheet of paper? -->
  <div id="form-paper">

  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="logo">
          <%= image_tag("svp_logo.jpg", size: "400x175") %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="home-text">
          <h2> Social Venture Partners <span style="color:#0060b2">Chicago</span></h2>
          <h3><strong>
          <%= form_tag "/landings/#{@landing.id}", method: :patch do %>
          <%= text_field_tag(:year, @landing.year, size:'6') %>  Letter of Interest Form
          </strong> </h3>
          <h3>Sector Focus: <i><span style="color:#BC214D"><%= text_field_tag(:sector_focus, @landing.sector_focus, size:'26') %></span></i></h3>
          
        </div>
      </div>
    </div>

    <hr>
    


  <div class="container">
    <div class="row">
      <h2><%= text_area_tag(:main_points, @landing.main_points, size:'70x10') %></h2>
    </div>
  </div>


    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="home-section">
          <h2>
            <i>We encourage your organization to submit this Letter of Interest if...</i></h2>
       
            <h3>
              <ul>
                <%= text_area_tag(:gray_section, @landing.gray_section, size: '75x10') %>
              </ul>
          </h3>
          </div>
        </div>
      </div>
    </div>


    <div class="container">
      <div class="row">
        <h2><%= text_area_tag(:last_point, @landing.last_point, size:'70x4') %> </h2>
      </div>
    </div>

    <%= submit_tag "Update Page", class: "btn btn-lg btn-primary" %>

    <% end %>
    
    <div class="get-started">

      <% if current_user %>
  
          <%= link_to "Get Started!", "/users/#{current_user.id}", :class => "btn btn-lg btn-primary", :role => "button" %>

      <% else %>
      
          <%= link_to "Get Started!", "/", :class => "btn btn-lg btn-primary", :role => "button" %>

      <% end %>
    </div>

    </div>
  </div>
</div>
