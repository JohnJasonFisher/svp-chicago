<!DOCTYPE html>
<html>
<head>
  <title>SvpChicago</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<!-- Navigation Bar -->

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/home">SVP-Chicago</a>
    </div>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? && current_user.admin %>      
          <li><a href="/questions">LOI Form Builder</a></li>
          <li><a href="/users">Users</a></li>
          <li><a href="/lois">LOIs</a></li>
          <li><a href="/ratings">Ratings</a></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
        <% elsif user_signed_in? %>  
          <li><a href="/lois">LOIs</a></li>
          <li><a href="/ratings">My Ratings</a></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><a href="/users/sign_up">Sign Up</a></li>
          <li><a href="/users/sign_in">Sign In</a></li>
        <% end %>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- Flash Messages -->

<% flash.each do |name, message| %>
  <div class="row">
    <div class="col-md-12 alert-rel-navbar">
      <div class="alert alert-<%= name == "alert" || name == "notice" ? "warning" : name %> alert-dismissable fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= message %></div>
    </div>
  </div>
<% end %>

<%= yield %>

</body>
</html>
