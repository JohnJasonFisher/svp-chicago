<div ng-app="app">
	<div ng-controller="formsCtrl" ng-init="setup();setupRatings()">
		<!-- {{ 1 + 1 }} -->
		<h1>Ratings</h1>
		<%= select_tag "questions", options_from_collection_for_select(@rating_questions[]) %>
		<table class="table table-hover">
			<tr>
				<% @rating_questions.each do |rating_question| %>
					<th>
						<%= rating_question %>
			  		<span class="glyphicon glyphicon-triangle-top sort-carat">
			  		</span>
					</th>
				<% end %>
			</tr>
			<!--- ng show rating user_id for admin---->
			<tr ng-repeat="rating in ratings">
				<td>{{ rating.loi.name }}</td>
				<td>{{ rating.loi.email }}</td>
				<td>{{ rating.q1 }}</td>
				<td>{{ rating.q2 }}</td>
				<td>{{ rating.q3 }}</td>
				<td>{{ rating.q4 }}</td>
				<td>{{ rating.q5 }}</td>
				<td>{{ rating.weighted_score }}</td>
			</tr>
		</table>
	</div>
</div>