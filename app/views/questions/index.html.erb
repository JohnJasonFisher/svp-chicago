<div class="site-container">
  <div id="form-paper">
    <div class="form-heading">
      <h1>LOI Questions</h1>
    </div>


    <div class="add-question">
      <%= link_to "Add New Question", "/questions/new", :class => "btn btn-primary btn-question", :role => "button" %>
    </div>

    <ol style="width:90%;margin:auto;">
      <% @sections.each do |section| %>
        <h3><li> <%= section.name %> </li></h3>
          <table class="table table-striped table-bordered" style="margin-bottom:30px;">
            <% @questions.each do |question| %>
              <tr>
                <% if question.section_id == section.id %>
                  <td style="width: 70%">
                    <p> <%= question.question %> </p>
                  </td>
                  <td style="width: 15%">
                    <% if question.question == 'Organization' %>
                      <button class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Currently unable to Edit">Edit</button>
                    <% else %>
                      <%= link_to "Edit", "/questions/#{question.id}/edit", :class => "btn btn-custom", :role => "button" %>
                    <% end %>
                  </td>
                  <td style="width: 15%;">
                    <% if question.question == 'Organization' %>
                      <button class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Currently unable to Delete">Delete</button>
                    <% else %>
                      <%= link_to "Delete", "/questions/#{question.id}/edit", :class => "btn btn-custom", :role => "button" %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </table>
      <% end %>
    </ol>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
});
</script>